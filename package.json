{
  "name": "waitlist-website",
  "version": "1.0.0",
  "description": "정적 대기자 명단 웹사이트 (GrapesJS 에디터 포함)",
  "scripts": {
    "start": "serve -s . -l 8080",
    "dev": "serve -s . -l 8080",
    "open": "serve -s . -l 8080 --open",
    "editor": "node server.js",
    "editor-start": "concurrently \"npm run editor\" \"npm run serve\"",
    "build": "echo 'Static website - no build needed'",
    "serve-waitlist": "serve -s ./waitlist -l 8080",
    "preview-github-pages": "serve -s ./waitlist -l 8080 --open"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "grapesjs": "^0.22.12",
    "js-beautify": "^1.15.4",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
